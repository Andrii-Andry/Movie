<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="116dp"
        android:layout_height="193dp"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#232196F3"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageBanner"
                android:layout_width="120dp"
                android:layout_height="127dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/screaam_v" />

            <TextView
                android:id="@+id/movieName"
                android:layout_width="69dp"
                android:layout_height="21dp"
                android:layout_margin="@dimen/cardview_default_radius"
                android:text="@string/Scream_movie"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_default_radius"
                android:text="@string/Scream_Genre"
                android:textColor="@color/RYB_RED"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/ageRestriction"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_default_radius"
                android:text="@string/Scream_18"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

